<html>
<head>
    <title>Appointment</title>
    <!-- viewport -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Materialize CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css?family=Playfair+Display|Raleway" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="../public/assets/css/style_4.css">
    <style>
        .container1 {
            width: 80%;
            margin: 0 auto;
        }
        
        .footer {
            grid-area: footer;
            width: 100%;
            background-color: #000;
            color: #999;
            text-align: center;
            padding: 50px 0px 100px;
        }
        
        @media screen and (max-width: 1200px) {
            .container1 {
                width: 100%;
                grid-template-rows: auto;
                grid-template-columns: 50% 50%;
                grid-template-areas: "booking"
             }            
           }
        
        @media screen and (max-width: 768px) {
            .container1 {
                width: 100%;
                grid-template-rows: auto;
                grid-template-columns: 100%;
                grid-template-areas: "booking";
            }
            
         }
    </style>

</head>
<body>
    <nav>
        <ul>
            <li><a href="../public/index.html"><img style="height: 60px; width: auto; margin-top: 0" src="../public/assets/images/salonLogo.png"></a></li>
            <li><a href="../public/index.html">About Us</a></li>
            <li><a href="../public/services.html">Services</a></li>
            <li><a href="../public/stylist.html">Stylist</a></li>
            <li><a href="../public/gallery.html">Gallery</a></li>
            <li><a href="../public/promotions.html">Promotions</a></li>
            <li><a href="../views/appointment.hbs">Appointments</a></li>
        </ul>
    </nav>
    
    <div class="container1">
        <div class="booking" id="booking">
            <form class="col s12" id="signup" name="services" method="post" action="/appointment">
                <div class="row">
                    <div class="input-field col s4">
                        <select name ="services">
                            <option value="" disabled selected>Choose your option</option>
                            <option value="Highlights">Highlights</label></option>
                            <option value="Perm">Perm</option>
                            <option value="Wax">Wax</option>
                            <option value="Color">Color</option>
                            <option value="Family Haircuts">Family Haircuts</option>
                            <option value="Hair Extensions">Hair Extensions</option>
                            <option value="Eyelashes Extensions">Eyelashes Extensions</option>
                            <option value="Facial">Facial</option>
                            <option value="Makeup">Makeup</option>
                        </select>
                        <label>Services</label>
                    </div>

                    <div class="input-field col s4">
                        <input type="text" class="datepicker" name="date" placeholder="Select A Date">
                        <label for="date">Date</label>
                    </div>

                    <div class="input-field col s4">
                        <input type="text" class="timepicker" name="time" placeholder="Select A Time">
                        <label for="time">Time</label>
                    </div>

                </div>

                <div class="row">
                    <div class="input-field col s6">
                        <input placeholder="Jane" id="first_name" name="firstname" type="text" class="validate" required />
                        <label for="first_name">First Name</label>
                    </div>

                    <div class="input-field col s6">
                        <input placeholder="Doe" id="last_name" name="lastname" type="text" class="validate" required />
                        <label for="last_name">Last Name</label>
                    </div>

                </div>

                <div class="row">
                    <div class="input-field col s6">
                        <input placeholder="sample@example.com" id="email" name="email" type="email" class="validate">
                        <label for="email">Email</label>
                    </div>

                    <div class="input-field col s6">
                        <input placeholder="555-555-5555" id="telephone" type="tel" pattern="^\d{3}-\d{3}-\d{4}$" title="xxx-xxx-xxxx" name="phonenumber" class="validate">
                        <label for="telephone">Phone Number (format: xxx-xxx-xxxx)</label>
                    </div>

                </div>

                <button class="btn waves-effect waves-light" type="submit" name="action" value="appointment" onclick="validate()">Submit
                    <i class="material-icons right">send</i>
                </button>

            </form>
        </div>
    </div>

    <div class="footer">
        <p>&copy; 2018 Vani-T Beauty Salon</p>
    </div>
        
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    
    <!-- Materialize JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>

    <!-- JS -->
    <script type="text/javascript" src="../public/js/appointment.js"></script>
    <script type="text/javascript" src="../public/js/login.js"></script>

</body>
</html>


